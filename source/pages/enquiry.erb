<div ng-app="enquiryForm">
	<div ng-controller="MyCtrl">

		<!-- Form -->
		<form class="form-horizontal step1" id="enquiryForm">

		    <%= partial "partials/syn-online/forms/sections/textInputs" %> 
            <%= partial "partials/syn-online/forms/sections/textInputsTwoCols" %>  
		    <%= partial "partials/syn-online/forms/sections/selects" %>
		    <%= partial "partials/syn-online/forms/sections/radioChecks" %>
		    <%= partial "partials/syn-online/forms/sections/textareas" %>
            
			<!-- Enquiry example -->
			<div class="container panel">
				<fieldset class="clearfix">
					<h2>Enquiry</h2>
					<div class="sectionCollapsible">
				        <div class="form-group">
							<label for="selectHow" class="col-xs-3 control-label">How did you hear about us?</label>
							<div class="col-xs-6">
								<select class="form-control" id="selectHow">
								<option value="Select">Select</option>
								</select>
							</div>
						</div>
			            <div class="form-group">
					    	<label for="textInputOther" class="col-xs-3 control-label">Other <i class="zmdi zmdi-help-outline"></i></label>
					    	<div class="col-xs-6">
					    		<input type="text" class="form-control" id="textInputOther">
					    		
					    	</div>
					    </div>
					    <div class="form-group">
					    	<label for="textareaEnquiry" class="col-xs-3 control-label">Your enquiry</label>
					    	<div class="col-xs-6">
					      		<textarea for="textareaEnquiry" class="form-control" rows="9"></textarea>
					    	</div>
						</div>
					</div>
				</fieldset>
			</div>

			<!-- Button section -->
		    <div class="container padA0">
			  <div class="row button-row">
			    <div class="col-xs-3">
			      <!-- <button type="button" class="btn btn-default btn-lg">Back</button> -->
			    </div>
			    <div class="col-xs-6 col-xs-offset-3">
			      <div class="pull-right">
			        <a class="btn btn-default btn-lg" href="dashboard.html" role="button">Cancel</a>
					<button class="btn btn-primary btn-lg" href="step2.html" role="button" type="submit">Submit</button>
			      </div>
			    </div>
			  </div>
			</div>

		</form>

	</div>
	<script>
        angular.module("enquiryForm", [ "kendo.directives" ])
            .controller("MyCtrl", function($scope){
    
                $scope.validate = function(event) {
                    event.preventDefault();
    
                    if ($scope.validator.validate()) {
                        $scope.validationMessage = "Hooray! Your tickets has been booked!";
                        $scope.validationClass = "valid";
                    } else {
                        $scope.validationMessage = "Oops! There is invalid data in the form.";
                        $scope.validationClass = "invalid";
                    }
                }
            })
    </script>
</div>
	
	















