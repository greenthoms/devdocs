<fieldset class="radioBlockList">

    <legend>How would you like to proceed?</legend>
    <label for="radio-1" class="radioBlockListLabel">
        <input id="radio-1" type="radio" name="radio-group" aria-expanded="false"> Pay online now
    </label>
    <label for="radio-2" class="radioBlockListLabel">
        <input id="radio-2" type="radio" name="radio-group" aria-expanded="false"> Pay online at a later date
    </label>
    <label for="radio-3" class="radioBlockListLabel">
        <input id="radio-3" type="radio" name="radio-group" aria-expanded="false">Pay in person at a later date
    </label>

</fieldset>


<script type="text/javascript">
    $('.radioBlockListLabel').click(function() {
        $('.radioBlockListLabel').removeClass('selected');    
        $(this).addClass('selected');
    });
</script>