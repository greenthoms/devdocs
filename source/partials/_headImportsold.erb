<meta charset="utf-8">

<!-- Always force latest IE rendering engine or request Chrome Frame -->
<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Import Webfonts -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

<!-- Use title if it's in the page YAML frontmatter -->
<title><%= current_page.data.title || "Style Guide" %></title>

<!-- Fonts -->
<%= stylesheet_link_tag 'fonts/material-icons/material-icons',
                        'fonts/roboto/roboto',
                        'fonts/synIcons/synIcons' %>

<!-- Libraries -->
<%= stylesheet_link_tag 'libraries/kendo.common.min.css',
                        'libraries/kendo.bootstrap.min.css',
                        'libraries/chosen/chosen',
                        'libraries/bootstrap.min.css' %>

<!-- (Re)Base -->
<%= stylesheet_link_tag 'base/variables',
                        'base/base' %>

<!-- Modules -->
<%= stylesheet_link_tag 'modules/docs',
                        'modules/kendo-custom',
                        'modules/bootstrap-custom',
                        'modules/email',
                        'modules/loaders',
                        'modules/panels',
                        'modules/modals',
                        'modules/widgets',
                        'modules/navigation',
                        'modules/icons',
                        'modules/blockLists',
                        'modules/more-menu',
                        'modules/kGridLight' %>

<!-- Utilities -->
<%= stylesheet_link_tag 'utilities/utilities',
                        'utilities/space',
                        'utilities/icons',
                        'utilities/loading', 
                        'utilities/type',
                        'utilities/colours.css',
                        'utilities/animation.css',
                        'utilities/flex' %>

<!-- JS -->
<%= javascript_include_tag  'jquery.min.js', 
                            'chosen.jquery.min.js',
                            'kendo.all.min.js',
                            'bootstrap.min.js'%>

<!-- Flexbox Grid -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/flexboxgrid/6.3.0/flexboxgrid.min.css" type="text/css" >